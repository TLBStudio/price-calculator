{# Compatibility Warnings Modal #}
{% if warnings is defined and warnings|length > 0 %}
    <dialog id="warningsModal" class="rounded-2xl shadow-2xl backdrop:bg-black/60">
        <div class="bg-white p-6 max-w-2xl w-full max-h-[80vh] overflow-y-auto">
            <div class="flex justify-between items-start mb-6">
                <h2 class="text-2xl font-bold text-gray-900 flex items-center">
                    <svg class="w-7 h-7 mr-3 text-yellow-500" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path>
                    </svg>
                    Compatibility Warnings
                </h2>
                <button
                    type="button"
                    id="closeWarningsBtn"
                    class="text-gray-400 hover:text-gray-600 transition-colors p-1 hover:bg-gray-100 rounded-lg"
                    aria-label="Close warnings"
                >
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                    </svg>
                </button>
            </div>

            <div class="space-y-4">
                {% for warning in warnings %}
                    {% if warning is iterable %}
                        <div class="p-4 bg-yellow-50 border border-yellow-200 rounded-xl">
                            <p class="text-yellow-800 font-medium mb-3">{{ warning.message }}</p>

                            {% if warning.incompatible_features is defined and warning.incompatible_features|length > 0 %}
                                <div class="mb-3">
                                    <p class="text-sm text-yellow-700 font-medium mb-2">Incompatible features:</p>
                                    <div class="flex flex-wrap gap-2">
                                        {% for feature in warning.incompatible_features %}
                                            <span class="px-3 py-1 bg-yellow-200 text-yellow-800 text-sm rounded-full font-medium">
                                                {{ config.features[feature].title is defined ? config.features[feature].title : feature }}
                                            </span>
                                        {% endfor %}
                                    </div>
                                </div>
                            {% endif %}

                            {% if warning.conflicting_features is defined and warning.conflicting_features|length > 0 %}
                                <div class="mb-3">
                                    <p class="text-sm text-yellow-700 font-medium mb-2">Conflicting features:</p>
                                    <div class="flex flex-wrap gap-2">
                                        {% for feature in warning.conflicting_features %}
                                            <span class="px-3 py-1 bg-yellow-200 text-yellow-800 text-sm rounded-full font-medium">
                                                {{ config.features[feature].title is defined ? config.features[feature].title : feature }}
                                            </span>
                                        {% endfor %}
                                    </div>
                                </div>
                            {% endif %}
                        </div>
                    {% else %}
                        <div class="p-4 bg-yellow-50 border border-yellow-200 rounded-xl">
                            <p class="text-yellow-800">{{ warning }}</p>
                        </div>
                    {% endif %}
                {% endfor %}
            </div>

            <div class="mt-6 p-4 bg-blue-50 border border-blue-200 rounded-xl">
                <p class="text-blue-800 text-sm">
                    <strong>Note:</strong> These are warnings only. Your estimate has been generated successfully, but you may want to review your selections for better project planning.
                </p>
            </div>

            <div class="mt-6 flex justify-end">
                <button
                    type="button"
                    id="closeWarningsModalBtn"
                    class="px-6 py-3 bg-gray-600 hover:bg-gray-700 text-white rounded-xl font-medium transition-all duration-200 shadow-lg hover:shadow-xl transform hover:-translate-y-0.5"
                >
                    Close
                </button>
            </div>
        </div>
    </dialog>
{% endif %}
{% endblock %}

{% block javascripts %}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const selects = document.querySelectorAll('select');
            const checkboxes = document.querySelectorAll('input[type="checkbox"]');
            const warningsModal = document.getElementById('warningsModal');
            const showWarningsBtn = document.getElementById('showWarningsBtn');
            const closeWarningsBtn = document.getElementById('closeWarningsBtn');
            const closeWarningsModalBtn = document.getElementById('closeWarningsModalBtn');

            // Reset form functionality
            document.getElementById('reset').addEventListener('click', function() {
                selects.forEach(select => {
                    select.value = 'normal';
                });

                checkboxes.forEach(checkbox => {
                    checkbox.checked = false;
                });

                // Reset bundles field
                const bundlesField = document.querySelector('.bundle-quantity');
                if (bundlesField) {
                    bundlesField.value = '';
                }
            });

            // Modal functionality
            if (showWarningsBtn && warningsModal) {
                // Show modal
                showWarningsBtn.addEventListener('click', function() {
                    warningsModal.showModal();
                });

                // Close modal with X button
                if (closeWarningsBtn) {
                    closeWarningsBtn.addEventListener('click', function() {
                        warningsModal.close();
                    });
                }

                // Close modal with Close button
                if (closeWarningsModalBtn) {
                    closeWarningsModalBtn.addEventListener('click', function() {
                        warningsModal.close();
                    });
                }

                // Close modal when clicking outside (backdrop)
                warningsModal.addEventListener('click', function(e) {
                    if (e.target === warningsModal) {
                        warningsModal.close();
                    }
                });

                // Close modal with Escape key
                warningsModal.addEventListener('keydown', function(e) {
                    if (e.key === 'Escape') {
                        warningsModal.close();
                    }
                });
            }

            // Add smooth scrolling to form sections
            const formSections = document.querySelectorAll('h3');
            formSections.forEach(section => {
                section.addEventListener('click', function() {
                    const nextElement = this.nextElementSibling;
                    if (nextElement) {
                        nextElement.scrollIntoView({ behavior: 'smooth', block: 'start' });
                    }
                });
            });
        });
    </script>
{% endblock %}
