{% extends 'base.html.twig' %}

{% block title %}Project Estimator - TLB Pricing{% endblock %}

{% block body %}
<div class="min-h-screen py-8 px-4 sm:px-6 lg:px-8">
    <!-- Header Section -->
    <div class="max-w-7xl mx-auto mb-8">
        <div class="text-center">
            <div class="flex justify-center mb-4">
                <div class="w-16 h-16 bg-gradient-to-br from-blue-500 to-indigo-600 rounded-2xl flex items-center justify-center shadow-lg">
                    <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z"></path>
                    </svg>
                </div>
            </div>
            <h1 class="text-4xl font-bold text-gray-900 mb-2">Project Estimator</h1>
            <p class="text-xl text-gray-600 max-w-2xl mx-auto">Generate accurate project quotes with our intelligent pricing engine. Get detailed breakdowns, payment schedules, and ongoing support costs.</p>
        </div>
    </div>

    <div class="max-w-7xl mx-auto">
        <div class="grid lg:grid-cols-3 gap-8">
            <!-- Form Section -->
            <div class="lg:col-span-2">
                <div class="bg-white rounded-2xl shadow-xl border border-gray-100 overflow-hidden">
                    <div class="bg-gradient-to-r from-blue-600 to-indigo-600 px-6 py-4">
                        <h2 class="text-xl font-semibold text-white">Project Requirements</h2>
                        <p class="text-blue-100 text-sm">Fill in the details below to get your estimate</p>
                    </div>

                    <div class="p-6">
                        {{ form_start(form, {
                            'attr': {
                                'data-turbo': 'false',
                                'class': 'space-y-8',
                                'autocomplete': 'off'
                            }
                        }) }}

                        <!-- Project Type Section -->
                        <div class="space-y-4">
                            <div class="flex items-center space-x-3">
                                <div class="w-8 h-8 bg-blue-100 rounded-lg flex items-center justify-center">
                                    <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
                                    </svg>
                                </div>
                                <h3 class="text-lg font-semibold text-gray-900">Project Type</h3>
                            </div>
                            <div class="pl-11">
                                {{ form_row(form.projectType, {
                                    'label_attr': {'class': 'sr-only'},
                                    'attr': {
                                        'class': 'w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200 bg-white shadow-sm hover:shadow-md'
                                    }
                                }) }}
                            </div>
                        </div>

                        <!-- Modifiers Section -->
                        <div class="space-y-4">
                            <div class="flex items-center space-x-3">
                                <div class="w-8 h-8 bg-green-100 rounded-lg flex items-center justify-center">
                                    <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 100 4m0-4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 100 4m0-4v2m0-6V4"></path>
                                    </svg>
                                </div>
                                <h3 class="text-lg font-semibold text-gray-900">Project Modifiers</h3>
                            </div>
                            <div class="pl-11">
                                <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                                    <div class="space-y-2">
                                        <label class="block text-sm font-medium text-gray-700">Discovery Needs</label>
                                        {{ form_widget(form.discovery, {
                                            'attr': {
                                                'class': 'w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200 bg-white shadow-sm hover:shadow-md'
                                            }
                                        }) }}
                                    </div>
                                    <div class="space-y-2">
                                        <label class="block text-sm font-medium text-gray-700">Complexity Level</label>
                                        {{ form_widget(form.complexity, {
                                            'attr': {
                                                'class': 'w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200 bg-white shadow-sm hover:shadow-md'
                                            }
                                        }) }}
                                    </div>
                                    <div class="space-y-2">
                                        <label class="block text-sm font-medium text-gray-700">Risk Assessment</label>
                                        {{ form_widget(form.risk, {
                                            'attr': {
                                                'class': 'w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200 bg-white shadow-sm hover:shadow-md'
                                            }
                                        }) }}
                                    </div>
                                    <div class="space-y-2">
                                        <label class="block text-sm font-medium text-gray-700">Support Requirements</label>
                                        {{ form_widget(form.support, {
                                            'attr': {
                                                'class': 'w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200 bg-white shadow-sm hover:shadow-md'
                                            }
                                        }) }}
                                    </div>
                                    <div class="space-y-2">
                                        <label class="block text-sm font-medium text-gray-700">Timeline</label>
                                        {{ form_widget(form.speed, {
                                            'attr': {
                                                'class': 'w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200 bg-white shadow-sm hover:shadow-md'
                                            }
                                        }) }}
                                    </div>
                                    {% if form.compliance is defined %}
                                    <div class="space-y-2">
                                        <label class="block text-sm font-medium text-gray-700">Compliance Level</label>
                                        {{ form_widget(form.compliance, {
                                            'attr': {
                                                'class': 'w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200 bg-white shadow-sm hover:shadow-md'
                                            }
                                        }) }}
                                    </div>
                                    {% endif %}
                                    {% if form.realTime is defined %}
                                    <div class="space-y-2">
                                        <label class="block text-sm font-medium text-gray-700">Real-time Requirements</label>
                                        {{ form_widget(form.realTime, {
                                            'attr': {
                                                'class': 'w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200 bg-white shadow-sm hover:shadow-md'
                                            }
                                        }) }}
                                    </div>
                                    {% endif %}
                                </div>
                            </div>
                        </div>

                        <!-- Bundles Section -->
                        <div class="space-y-4">
                            <div class="flex items-center space-x-3">
                                <div class="w-8 h-8 bg-orange-100 rounded-lg flex items-center justify-center">
                                    <svg class="w-5 h-5 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
                                    </svg>
                                </div>
                                <h3 class="text-lg font-semibold text-gray-900">Additional Bundles</h3>
                            </div>
                            <div class="pl-11">
                                <div class="max-w-xs">
                                    <label class="block text-sm font-medium text-gray-700 mb-2">
                                        {{ config.bundles.title is defined ? config.bundles.title : 'Additional Bundles' }}
                                    </label>
                                    {{ form_widget(form.bundles, {
                                        'attr': {
                                            'class': 'w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-orange-500 focus:border-transparent transition-all duration-200 bg-white shadow-sm hover:shadow-md bundle-quantity',
                                            'placeholder': '0',
                                            'data-max-quantity': config.bundles.max_quantity is defined ? config.bundles.max_quantity : 50
                                        }
                                    }) }}
                                    {% if config.bundles.description is defined %}
                                        <p class="text-sm text-gray-500 mt-2">{{ config.bundles.description }}</p>
                                    {% endif %}
                                </div>
                            </div>
                        </div>

                        <!-- Features Section -->
                        <div class="space-y-4">
                            <div class="flex items-center space-x-3">
                                <div class="w-8 h-8 bg-purple-100 rounded-lg flex items-center justify-center">
                                    <svg class="w-5 h-5 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"></path>
                                    </svg>
                                </div>
                                <h3 class="text-lg font-semibold text-gray-900">Additional Features</h3>
                            </div>
                            <div class="pl-11">
                                <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-3">
                                    {% for subfield in form.features %}
                                        <label class="flex items-start space-x-3 p-3 border border-gray-200 rounded-xl hover:border-blue-300 hover:shadow-md transition-all duration-200 cursor-pointer bg-white">
                                            {{ form_widget(subfield, {
                                                'attr': {
                                                    'class': 'mt-1 w-4 h-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500 focus:ring-2'
                                                }
                                            }) }}
                                            <div class="flex-1">
                                                {% set key = subfield.vars.value %}
                                                <span class="font-medium text-gray-900" title="{{ config.features[key].description is defined ? config.features[key].description : '' }}">
                                                    {{ subfield.vars.label }}
                                                </span>
                                                {% if config.features[key].description is defined %}
                                                    <p class="text-sm text-gray-500 mt-1">{{ config.features[key].description }}</p>
                                                {% endif %}
                                            </div>
                                        </label>
                                    {% endfor %}
                                </div>
                            </div>
                        </div>

                        <!-- Action Buttons -->
                        <div class="flex flex-col sm:flex-row gap-4 pt-4">
                            <button type="submit" class="flex-1 bg-gradient-to-r from-blue-600 to-indigo-600 text-white px-6 py-3 rounded-xl font-semibold shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 transition-all duration-200 flex items-center justify-center space-x-2">
                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z"></path>
                                </svg>
                                <span>Generate Estimate</span>
                            </button>
                            <button id="reset" type="button" class="px-6 py-3 border border-gray-300 text-gray-700 rounded-xl font-medium hover:bg-gray-50 hover:border-gray-400 transition-all duration-200 flex items-center justify-center space-x-2">
                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
                                </svg>
                                <span>Reset Form</span>
                            </button>
                        </div>

                        {{ form_end(form) }}
                    </div>
                </div>
            </div>

            <!-- Estimate Results Section -->
            <div class="lg:col-span-1">
                <div class="bg-white rounded-2xl shadow-xl border border-gray-100 overflow-hidden sticky top-8">
                    <div class="bg-gradient-to-r from-green-600 to-emerald-600 px-6 py-4">
                        <h2 class="text-xl font-semibold text-white">Your Estimate</h2>
                        <p class="text-green-100 text-sm">Real-time project cost breakdown</p>
                    </div>

                    <div class="p-6">
                        {% if est %}
                            <!-- Project Type Info -->
                            {% set selectedType = form.projectType.vars.value %}
                            {% if selectedType and config.project_types[selectedType] is defined %}
                                <div class="mb-6 p-4 bg-blue-50 rounded-xl border border-blue-200">
                                    <h4 class="font-semibold text-blue-900 mb-2">{{ config.project_types[selectedType].title }}</h4>
                                    <p class="text-sm text-blue-700">{{ config.project_types[selectedType].description }}</p>
                                </div>
                            {% endif %}

                            <!-- Bundle Info -->
                            {% set bundleQuantity = form.bundles.vars.value|default(0) %}
                            {% if bundleQuantity > 0 %}
                                <div class="mb-6 p-4 bg-orange-50 rounded-xl border border-orange-200">
                                    <h4 class="font-semibold text-orange-900 mb-2 flex items-center">
                                        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
                                        </svg>
                                        {{ config.bundles.title is defined ? config.bundles.title : 'Additional Bundles' }}
                                    </h4>
                                    <div class="text-sm text-orange-700">
                                        <p class="mb-1"><strong>{{ bundleQuantity }} bundle(s)</strong> selected</p>

                                        {% if config.bundles.description is defined %}
                                            <p class="text-xs mt-2 text-orange-600">{{ config.bundles.description }}</p>
                                        {% endif %}
                                    </div>
                                </div>
                            {% endif %}

                            <!-- Compatibility Warnings Button -->
                        {% if warnings is defined and warnings|length > 0 %}
                            <div class="my-6">
                                <button
                                    type="button"
                                    id="showWarningsBtn"
                                    class="w-full px-4 py-3 bg-yellow-500 hover:bg-yellow-600 text-white rounded-xl font-medium transition-all duration-200 flex items-center justify-center space-x-2 shadow-lg hover:shadow-xl transform hover:-translate-y-0.5"
                                >
                                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                                        <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path>
                                    </svg>
                                    <span>View Warnings ({{ warnings|length }})</span>
                                </button>
                            </div>
                        {% endif %}

                            <!-- Price Range -->
                            <div class="mb-6">
                                <div class="text-center p-4 bg-gradient-to-r from-blue-50 to-indigo-50 rounded-xl border border-blue-200">
                                    <p class="text-sm font-medium text-blue-700 mb-1">Total Project Cost</p>
                                    <div class="text-3xl font-bold text-blue-900">£{{ est.low|number_format }} – £{{ est.high|number_format }}</div>
                                    <p class="text-xs text-blue-600 mt-1">Estimated range based on your requirements</p>
                                </div>
                            </div>

                            <!-- Project Duration -->
                            <div class="mb-6">
                                <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg">
                                    <span class="text-sm font-medium text-gray-700">Project Duration</span>
                                    <span class="text-lg font-semibold text-gray-900">{{ est.days }} days</span>
                                </div>
                                <div class="mt-3 p-3 bg-amber-50 border border-amber-200 rounded-lg">
                                    <div class="flex items-start space-x-2">
                                        <svg class="w-5 h-5 text-amber-600 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                        </svg>
                                        <div class="text-sm">
                                            <p class="font-medium text-amber-800 mb-1">Development Time Only</p>
                                            <p class="text-amber-700">This represents total development days. Actual project timeline will include gaps for feedback loops, client reviews, and dependencies between phases.</p>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Payment Schedule -->
                            {% if est.paymentSchedule %}
                                <div class="mb-6">
                                    <h4 class="font-semibold text-gray-900 mb-3 flex items-center">
                                        <svg class="w-5 h-5 text-green-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m2 4h10a2 2 0 002-2v-6a2 2 0 00-2-2H9a2 2 0 00-2 2v6a2 2 0 002 2zm7-5a2 2 0 11-4 0 2 2 0 014 0z"></path>
                                        </svg>
                                        Payment Schedule
                                    </h4>
                                    <div class="space-y-2">
                                        {% for p in est.paymentSchedule %}
                                            <div class="flex justify-between items-center p-2 bg-gray-50 rounded-lg">
                                                <span class="text-sm text-gray-700">{{ p.label }}</span>
                                                <span class="font-medium text-gray-900">£{{ p.low|number_format }} – £{{ p.high|number_format }}</span>
                                            </div>
                                        {% endfor %}
                                    </div>
                                </div>
                            {% endif %}

                            <!-- Support Costs -->
                            {% if est.support %}
                                <div class="mb-6">
                                    <h4 class="font-semibold text-gray-900 mb-3 flex items-center">
                                        <svg class="w-5 h-5 text-purple-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192L5.636 18.364M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-5 0a4 4 0 11-8 0 4 4 0 018 0z"></path>
                                        </svg>
                                        Ongoing Support
                                    </h4>
                                    <div class="p-3 bg-purple-50 rounded-lg border border-purple-200">
                                        <div class="text-center">
                                            <div class="text-2xl font-bold text-purple-900">£{{ est.support|number_format }}/month</div>
                                            <p class="text-xs text-purple-600 mt-1">Based on project value and complexity.</p><p class="text-xs text-purple-600 mt-1"><strong>NOTE:</strong> This figure is capped at a maximum of £900/month for quoting purposes</p>
                                        </div>
                                    </div>
                                </div>
                            {% endif %}

                            <!-- Phase Breakdown -->
                            <div class="mb-6">
                                <h4 class="font-semibold text-gray-900 mb-3 flex items-center">
                                    <svg class="w-5 h-5 text-indigo-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
                                    </svg>
                                    Phase Breakdown
                                </h4>
                                <div class="space-y-3">
                                    {% for phase, values in est.phases %}
                                        {% if values.high > 0 %}
                                            <div class="space-y-2">
                                                <div class="flex justify-between items-center">
                                                    <span class="text-sm font-medium text-gray-700">{{ phase|title|replace({'_': ' '}) }}</span>
                                                    <span class="text-sm font-semibold text-gray-900">£{{ values.low|number_format }} – £{{ values.high|number_format }}</span>
                                                </div>
                                                {% set percent = (values.high / est.high) * 100 %}
                                                <div class="w-full bg-gray-200 rounded-full h-2">
                                                    <div class="bg-gradient-to-r from-blue-500 to-indigo-500 h-2 rounded-full transition-all duration-500" style="width: {{ percent }}%"></div>
                                                </div>
                                            </div>
                                        {% endif %}
                                    {% endfor %}
                                </div>
                            </div>

                            <!-- Timeline Reality Check -->
                            <div class="mb-6">
                                <h4 class="font-semibold text-gray-900 mb-3 flex items-center">
                                    <svg class="w-5 h-5 text-orange-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                    </svg>
                                    Timeline Reality Check
                                </h4>
                                <div class="p-4 bg-orange-50 border border-orange-200 rounded-xl">
                                    <div class="space-y-3">
                                        <div class="flex items-start space-x-2">
                                            <svg class="w-4 h-4 text-orange-600 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                            </svg>
                                            <span class="text-sm text-orange-800">Development time: <strong>{{ est.days }} working days ({{ (est.days / 5)|round(1) }} weeks)</strong></span>
                                        </div>
                                        <div class="flex items-start space-x-2">
                                            <svg class="w-4 h-4 text-orange-600 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                            </svg>
                                            <span class="text-sm text-orange-800">Typical project duration: <strong>{{ (est.days / 5 + 6)|round(1) }} weeks</strong></span>
                                        </div>
                                        <div class="text-xs text-orange-700 mt-3 p-2 bg-orange-100 rounded-lg">
                                            <p class="font-medium mb-1">Why the difference?</p>
                                            <ul class="space-y-1 text-orange-600">
                                                <li>• 3 rounds of client feedback (up to 2 weeks each)</li>
                                                <li>• Dependencies between {{ est.phases|length }} project phases</li>
                                                <li>• Resource scheduling and availability</li>
                                                <li>• Testing and quality assurance cycles</li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        {% else %}
                            <!-- No Estimate State -->
                            <div class="text-center py-12">
                                <div class="w-16 h-16 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-4">
                                    <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
